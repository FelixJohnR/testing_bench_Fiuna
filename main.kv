#: import LinePlot kivy_garden.graph.LinePlot

<ClockText>:
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
    font_size: self.width/6

<ButtonNew@Button>:
    background_normal: ''
    background_down: ''
    background_color: 0.15, 0.15, 0.15, 1
    font_size: self.width/8

<RecordPopUp@Popup>:
    file_name: file_name
    title: "RECOPILACION DE DATOS"
    id: rpop
    size_hint: 0.4, 0.3
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            padding: 10, 10, 10, 10

            Label:
                font_size: '30sp'
                text: "Nombre del archivo: "
                size_hint: 1, 0.8

            TextInput:
                id: file_name
                font_size: '30sp'
                size_hint: (1, 0.5)
                height: 30
                pos_hint: {"x":0.5, "top":0.65}
                hint_text:'Name'
                multiline: False
                write_tab: False

        BoxLayout:
            padding: 100, 10, 100, 10
            spacing: '100dp'

            Button:
                font_size: '25sp'
                text: "Accept"
                size_hint: 0.5, 0.5
                on_release:
                    root.accept()
            Button:
                font_size: '25sp'
                text: "Cancel"
                size_hint: 0.5, 0.5
                on_release:
                    app.root.recordButton()
                    root.cancel()

<ConfigPopUp@Popup>:
    title: "CONFIGURACION"
    id: spop
    size_hint: 0.45, 0.6
    auto_dismiss: True

    BoxLayout:
        orientation: 'vertical'

        ConfigTab:
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_default_tab: False
            tab_height: 40
            tab_width: 170

            TabbedPanelItem:
                text: 'SENSOR DE FLUJO'
                Label:
                    text: "First tab"

            TabbedPanelItem:
                text: 'SENSOR DE PRESION'
                BoxLayout:
                    Label:
                        text: 'Press button'
                    Button:
                        text: 'Click it'

        BoxLayout:
            size_hint: 1, 0.1
            padding: 100, 0, 100, 0
            spacing: '100dp'

            Button:
                font_size: '25sp'
                text: "Accept"
                size_hint: 0.9, 0.9
                on_release:
                    app.root.configButton()
                    root.accept()
            Button:
                font_size: '25sp'
                text: "Cancel"
                size_hint: 0.9, 0.9
                on_release:
                    app.root.configButton()
                    root.cancel()

